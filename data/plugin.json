{
  "name": "snippets",
  "pluginName": "超级文本片段",
  "description": "帮助您随时随地使用最有用的文本片段。呼出uTools输入对应关键字，即可将其对应的文本片段插入到指定位置！令人惊喜的是文本片段还支持多种动态占位符（灵感来源：Alfred）。",
  "author": "https://github.com/ripperts",
  "homepage": "https://github.com/RipperTs/utools-snippets-plugin",
  "version": "2.0.8",
  "logo": "dist/logo.png",
  "main": "dist/index.html",
  "preload": "dist/preload.js",
  "development": {
    "main": "http://127.0.0.1:4100"
  },
  "pluginSetting": {
    "height": 600
  },
  "features": [
    {
      "code": "snippets",
      "explain": "打开此插件的设置页面,并在其中设置文本片段",
      "cmds": [
        "Automatic snippets",
        "自动上屏",
        "关键字上屏",
        "设置自动上屏",
        "文本片段",
        "超级文本片段"
      ]
    },
    {
      "code": "search",
      "explain": "搜索文本片段",
      "mainPush": true,
      "cmds": [
        {
          "type": "over",
          "label": "搜索文本片段"
        }
      ]
    }
  ]
}
